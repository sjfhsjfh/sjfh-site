---
import SiteBase from "@components/SiteBase.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<SiteBase title={title}>
    <div class="blog-container">
        <slot />
    </div>
</SiteBase>

<style>
    .blog-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: var(--color-bg-content);
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    .blog-container :global(h1) {
        font-family: system-ui, sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--color-text);
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 3px solid var(--color-bg-highlighted);
        position: relative;
    }

    .blog-container :global(h1)::after {
        content: "";
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 60px;
        height: 3px;
        background-color: var(--color-text-secondary);
    }

    .blog-container :global(h2) {
        font-family: system-ui, sans-serif;
        font-size: 1.875rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 2.5rem 0 1rem 0;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--color-bg-highlighted);
        position: relative;
    }

    .blog-container :global(h2)::before {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 40px;
        height: 2px;
        background-color: var(--color-text-secondary);
    }

    .blog-container :global(h3) {
        font-family: system-ui, sans-serif;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-text);
        margin: 2rem 0 0.75rem 0;
        padding-bottom: 0.25rem;
        border-bottom: 1px solid var(--color-bg-highlighted);
    }

    .blog-container :global(h4) {
        font-family: system-ui, sans-serif;
        font-size: 1.25rem;
        font-weight: 500;
        color: var(--color-text);
        margin: 1.5rem 0 0.5rem 0;
    }

    .blog-container :global(p) {
        color: var(--color-text);
        line-height: 1.7;
        margin-bottom: 1rem;
    }

    .blog-container :global(a) {
        color: var(--color-text-secondary);
        text-decoration: underline;
        transition: color 0.2s;
    }

    .blog-container :global(a:hover) {
        color: var(--color-text);
    }

    .blog-container :global(ul, ol) {
        margin: 1rem 0;
        padding-left: 1.5rem;
        color: var(--color-text);
    }

    .blog-container :global(li) {
        margin-bottom: 0.5rem;
        line-height: 1.6;
    }

    .blog-container :global(blockquote) {
        border-left: 4px solid var(--color-text-secondary);
        padding-left: 1rem;
        margin: 1.5rem 0;
        color: var(--color-text-secondary);
        font-style: italic;
    }

    .blog-container :global(code) {
        background-color: var(--color-bg-highlighted);
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        color: var(--color-text);
    }

    .blog-container :global(pre) {
        background-color: var(--color-bg-highlighted);
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1rem 0;
    }

    .blog-container :global(pre code) {
        background: none;
        padding: 0;
    }
</style>
